<mujoco model="robot_arm">
  <compiler angle="radian" coordinate="local"/>
  
  <default>
    <joint armature="0.1" damping="1" limited="true"/>
    <geom contype="1" conaffinity="1" condim="3" friction="1 0.5 0.005" margin="0.001" material="gray"/>
  </default>

  <asset>
    <material name="gray" rgba="0.5 0.5 0.5 1"/>
    <material name="red" rgba="1 0 0 1"/>
    <material name="green" rgba="0 1 0 1"/>
    <material name="blue" rgba="0 0 1 1"/>
    <material name="white" rgba="1 1 1 1"/>
  </asset>

  <worldbody>
    <!-- Floor -->
    <geom name="floor" type="plane" size="2 2 0.1" rgba="0.8 0.8 0.8 1"/>
    
    <!-- Table -->
    <geom name="table" type="box" size="0.8 0.8 0.02" pos="0 0 0.4" rgba="0.6 0.4 0.2 1"/>
    
    <!-- Robot base -->
    <body name="base" pos="0 0 0.42">
      <geom name="base_geom" type="cylinder" size="0.08 0.05" rgba="0.3 0.3 0.3 1"/>
      
      <!-- Joint 1: Base rotation -->
      <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14 3.14" pos="0 0 0"/>
      
      <!-- Link 1 -->
      <body name="link1" pos="0 0 0.05">
        <geom name="link1_geom" type="cylinder" size="0.04 0.15" rgba="0.5 0.5 0.5 1"/>
        
        <!-- Joint 2: Shoulder -->
        <joint name="joint2" type="hinge" axis="0 1 0" range="-1.57 1.57" pos="0 0 0.15"/>
        
        <!-- Link 2 -->
        <body name="link2" pos="0 0 0.15">
          <geom name="link2_geom" type="box" size="0.03 0.03 0.2" rgba="0.4 0.6 0.4 1"/>
          
          <!-- Joint 3: Elbow -->
          <joint name="joint3" type="hinge" axis="0 1 0" range="-2.36 0" pos="0 0 0.2"/>
          
          <!-- Link 3 -->
          <body name="link3" pos="0 0 0.2">
            <geom name="link3_geom" type="box" size="0.025 0.025 0.15" rgba="0.4 0.4 0.6 1"/>
            
            <!-- Joint 4: Wrist pitch -->
            <joint name="joint4" type="hinge" axis="0 1 0" range="-1.57 1.57" pos="0 0 0.15"/>
            
            <!-- Link 4 -->
            <body name="link4" pos="0 0 0.15">
              <geom name="link4_geom" type="cylinder" size="0.02 0.08" rgba="0.6 0.4 0.6 1"/>
              
              <!-- Joint 5: Wrist roll -->
              <joint name="joint5" type="hinge" axis="0 0 1" range="-3.14 3.14" pos="0 0 0.08"/>
              
              <!-- End effector -->
              <body name="end_effector" pos="0 0 0.08">
                <geom name="ee_geom" type="box" size="0.02 0.02 0.03" rgba="0.8 0.2 0.2 1"/>
                
                <!-- Gripper finger 1 -->
                <body name="finger1" pos="0.02 0 0.03">
                  <geom name="finger1_geom" type="box" size="0.01 0.005 0.02" rgba="0.2 0.8 0.2 1"/>
                  <joint name="gripper_joint1" type="slide" axis="1 0 0" range="0 0.04"/>
                </body>
                
                <!-- Gripper finger 2 -->
                <body name="finger2" pos="-0.02 0 0.03">
                  <geom name="finger2_geom" type="box" size="0.01 0.005 0.02" rgba="0.2 0.8 0.2 1"/>
                  <joint name="gripper_joint2" type="slide" axis="-1 0 0" range="0 0.04"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
    
    <!-- Target object -->
    <body name="target" pos="0.3 0.3 0.45">
      <geom name="target_geom" type="sphere" size="0.02" rgba="1 0 0 0.7"/>
      <joint name="target_free" type="free"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="motor1" joint="joint1" gear="100"/>
    <motor name="motor2" joint="joint2" gear="100"/>
    <motor name="motor3" joint="joint3" gear="100"/>
    <motor name="motor4" joint="joint4" gear="50"/>
    <motor name="motor5" joint="joint5" gear="50"/>
    <motor name="gripper_motor1" joint="gripper_joint1" gear="10"/>
    <motor name="gripper_motor2" joint="gripper_joint2" gear="10"/>
  </actuator>

  <sensor>
    <framepos name="ee_position" objtype="body" objname="end_effector"/>
    <framequat name="ee_orientation" objtype="body" objname="end_effector"/>
  </sensor>
</mujoco>